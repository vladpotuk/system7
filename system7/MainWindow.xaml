<Window x:Class="system7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word Search in Directory" Height="400" Width="600">
    <Grid>
        <Label Content="Enter word:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="WordTextBox" HorizontalAlignment="Left" Height="23" Margin="120,10,0,0" VerticalAlignment="Top" Width="150"/>

        <Label Content="Directory path:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox Name="DirectoryPathTextBox" HorizontalAlignment="Left" Height="23" Margin="120,40,0,0" VerticalAlignment="Top" Width="150"/>

        <Button Content="Search" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top" Width="100" Click="SearchButton_Click"/>

        <ListBox Name="ResultsListBox" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="560" Height="300"/>
    </Grid>
</Window>
