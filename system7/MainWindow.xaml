<Window x:Class="system7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fibonacci Calculator" Height="300" Width="400">
    <Grid>
        <Label Content="Enter upper limit:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="LimitTextBox" HorizontalAlignment="Left" Height="23" Margin="120,10,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Calculate" HorizontalAlignment="Left" Margin="230,10,0,0" VerticalAlignment="Top" Width="100" Click="CalculateButton_Click"/>
        <ListBox Name="FibonacciListBox" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="360" Height="200"/>
    </Grid>
</Window>
